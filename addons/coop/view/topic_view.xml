<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_coop_topic_filter" model="ir.ui.view">
            <field name="name">coop.topic.select</field>
            <field name="model">coop.topic</field>
            <field name="arch" type="xml">
                <search string="topic" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_coop_topic_form" model="ir.ui.view">
            <field name="name">coop.topic.form</field>
            <field name="model">coop.topic</field>
            <field name="arch" type="xml">
                <form string="topic" version="7.0">
                    <header>
                    </header>
                    <sheet string="topic">
                     <group>
                        <field name="name"
                            />
                        <field name="description"
                            />
                        <field name="sequence"
                            />
                        <field name="begin"
                            />
                        <field name="end"
                            />
                    <field name="mocion_ids"
                            />
                    <field name="associate_id"
                            />
                    <field name="meeting_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_coop_topic_tree" model="ir.ui.view">
            <field name="name">coop.topic.tree</field>
            <field name="model">coop.topic</field>
            <field name="arch" type="xml">
                <tree string="topic"
                    >
                    <field name="name"
                        />
                    <field name="sequence"
                        />
                    <field name="meeting_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
