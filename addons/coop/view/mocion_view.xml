<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_coop_mocion_filter" model="ir.ui.view">
            <field name="name">coop.mocion.select</field>
            <field name="model">coop.mocion</field>
            <field name="arch" type="xml">
                <search string="mocion" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_coop_mocion_form" model="ir.ui.view">
            <field name="name">coop.mocion.form</field>
            <field name="model">coop.mocion</field>
            <field name="arch" type="xml">
                <form string="mocion" version="7.0">
                    <header>
                        <button name="sgn_accepted"
                            states="draft"
                            string="accepted"
                            />
                        <button name="sgn_cancel"
                            states="draft"
                            string="cancel"
                            />
                        <button name="action_wfk_set_draft"
                            type="object"
                            states="canceled"
                            string="open"
                            />
                        <button name="sgn_publish"
                            states="waiting_for_referendum"
                            string="publish"
                            />
                        <button name="sgn_votar"
                            states="in_referendum"
                            string="votar"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="mocion">
                     <group>
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_coop_mocion_tree" model="ir.ui.view">
            <field name="name">coop.mocion.tree</field>
            <field name="model">coop.mocion</field>
            <field name="arch" type="xml">
                <tree string="mocion"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('waiting_for_referendum', 'in_referendum'); red:state in ()"
                    >
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
